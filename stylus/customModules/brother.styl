blue = #35E1F9
	
.section-brother
	background-color blue
section.brother-slider.brother-slider
	padding 0
	padding-top 40px
	.section-bg.bg.bg-loaded
		position absolute
		width 100%
		height 100%
		background-size auto 100%
		background-position right
		opacity 1
	.section-content-va
		text-align left
		.section-content
			max-width 600px
			text-align center
			.big-subtitle
				text-transform uppercase
			&.content-white
				.section-title
				.big-subtitle
					color white
					&:after
						background-color white
						
.section-content.section-content
	max-width 100%
.section-content
	.section-content
		.section-title.section-title
			border-radius 30px
			color white
			background-color blue
			padding 5px 20px
.section-text
	margin-top 30px
	text-align center
.section-content
	ul
		li
			line-height 25px
			&:before
				padding-right 15px
				font normal normal normal 14px/1 FontAwesome
				content "\f00c"
				color blue

section
	background-color white

article
	&.article-product
		background-color blue
		vertical-align top
		display inline-block
		width 250px
		min-height 300px
		max-width 100%
		transition ease all .3s
		box-shadow 0 0 20px rgba(0,0,0,.2)
		border-radius 10px
		@media $break-md
			margin 15px
			&:hover
				transform translateY(-20px)
		.modal-button
			display inline-block
			padding 10px 20px
			border 3px solid white
			color white
			font-weight bold
			text-transform uppercase
			border-radius 30px
			transition ease all .3s
			cursor pointer
			position relative
			&:hover
				background-color lighter
				border-color lighter
				color blue
		.article-title
			color white
			text-transform uppercase
			font-weight bold
			font-size h3
.modal
	&.modal-brother
		.modal-box
			max-width 400px
		.modal-inner
			background: white;
			padding: 30px;
			border-radius: 10px;
			z-index: 0;
			position: relative;
		.control-message
			position: absolute;
			right: 0;
footer
	text-align center !important
	.footer-content
		display inline-block
		.footer-title
			color white