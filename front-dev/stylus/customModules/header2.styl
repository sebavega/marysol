.header.brother
	width 330px
	right -4px
	@media $break-sm
		right 50px
	a
		text-transform uppercase
		font-weight bold
		display block
		float left
		width 33%
		text-align center
		color black
		background-color white
		padding 10px
		border 1px solid #d2d2d2
		transition ease all .2s
		&.active
			transform scale(1.1)
			box-shadow 1px 1px 13px 1px transparent
			background #09B2DA
			color white
			border-color transparent
			&:hover
				transform scale(1.1)
				box-shadow 1px 1px 13px 1px lightgrey
				background #09B2DA
				color white
				border-color transparent
	ul
		li
			&:nth-child(2)
				a
					border-left-color transparent
					border-right-color transparent
			a
				&:hover
					background-color black
					color white
					border 1px solid black