.topbar
	background-color #09B2DA
	padding 10px 10px
	position fixed
	z-index 2
	top 0
	width 100%
	text-align right
	ul
		width 100%
		li
			display inline-block
			padding 0 5px
			a
				color white
				.fa
					color #09B2DA
					background-color white
					border-radius 50%
					width 15px
					height 15px
					text-align center
					padding 2px
					&.fa-instagram
						padding 0px
						border-radius 0px
						position relative
						bottom 2px
